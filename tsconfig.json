{
	"compilerOptions": {
		"alwaysStrict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"jsxFactory": "createElement",
		"lib": ["ESNext", "DOM"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "./dist/",
		"skipLibCheck": true,
		"strictNullChecks": true,
		"target": "ESNext",
		"typeRoots": ["lua-types/5.3"],
		"types": ["@types/jest", "@types/node", "lua-types/5.3"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts"]
}
